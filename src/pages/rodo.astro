---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Pobieramy dane RODO z CMS
const rodoData = await getCollection('podstrony').then(entries => 
  entries.find(entry => entry.id === 'rodo')
);

const pageTitle = rodoData?.data.title || "RODO - kapitanie";
const pageDescription = rodoData?.data.description || "Informacje RODO/GDPR - kapitanie. Szczegółowe informacje o przetwarzaniu danych osobowych zgodnie z RODO.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main class="legal-page">
    <div class="container">
      <h1 set:html={rodoData?.data.title || "RODO/GDPR"}></h1>
      
      {rodoData?.data.last_updated && (
        <p class="last-updated">
          Ostatnia aktualizacja: {new Date(rodoData.data.last_updated).toLocaleDateString('pl-PL')}
        </p>
      )}
      
      <div class="legal-content" set:html={rodoData?.data.content || ''}>
        <!-- Zawartość zostanie załadowana z CMS -->
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .legal-page {
    min-height: 100vh;
    padding: 100px 0 50px;
    background: linear-gradient(135deg, var(--bg-main) 0%, var(--bg-secondary) 100%);
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-main);
    margin-bottom: 1rem;
    text-align: center;
  }

  .last-updated {
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 3rem;
    font-style: italic;
  }

  .legal-content {
    color: var(--text-main);
    line-height: 1.8;
  }

  .legal-content h2 {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--accent-blue);
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-blue);
  }

  .legal-content h3 {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-main);
    margin: 2rem 0 1rem;
  }

  .legal-content p {
    margin-bottom: 1.2rem;
  }

  .legal-content ul,
  .legal-content ol {
    margin: 1rem 0 1.5rem 2rem;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
  }

  .legal-content strong {
    color: var(--accent-blue);
    font-weight: 600;
  }

  .legal-content .contact-info {
    background: rgba(0, 169, 255, 0.1);
    padding: 1.5rem;
    border-radius: 12px;
    margin: 1.5rem 0;
    border-left: 4px solid var(--accent-blue);
  }

  .legal-content .contact-info p {
    margin-bottom: 0.5rem;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .legal-page {
      padding: 80px 0 30px;
    }

    .container {
      padding: 0 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .legal-content h2 {
      font-size: 1.5rem;
    }

    .legal-content h3 {
      font-size: 1.2rem;
    }

    .legal-content ul,
    .legal-content ol {
      margin-left: 1rem;
    }
  }
</style>
