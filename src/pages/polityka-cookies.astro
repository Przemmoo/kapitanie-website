---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import { marked } from 'marked';

// Pobieramy dane polityki cookies z CMS
const cookiesData = await getCollection('podstrony').then(entries => 
  entries.find(entry => entry.id === 'cookies')
);

const pageTitle = cookiesData?.data.title || "Polityka Cookies - kapitanie";
const pageDescription = cookiesData?.data.description || "Szczegółowa polityka wykorzystania plików cookies na stronie kapitanie.pl. Informacje o rodzajach ciasteczek i zarządzaniu zgodą.";

// Konwertuj markdown na HTML z poprawną konfiguracją
const contentHtml = cookiesData?.data.content ? marked(cookiesData.data.content, {
  breaks: true, // Włącza interpretację pojedynczych nowych linii jako <br>
  gfm: true, // GitHub Flavored Markdown
  pedantic: false,
  sanitize: false,
  smartLists: true,
  smartypants: false
}) : '';
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <!-- Hero section dla podstron prawnych -->
  <section class="legal-hero section">
    <div class="container">
      <div class="hero-content">
        <h1>{cookiesData?.data.title || "Polityka Cookies"}</h1>
      </div>
    </div>
  </section>

  <!-- Treść dokumentu -->
  <main class="legal-main section">
    <div class="container">
      <div class="legal-content">
        <div class="content-wrapper" set:html={contentHtml}></div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* Hero section dla podstron prawnych */
  .legal-hero {
    background: linear-gradient(135deg, var(--bg-main) 0%, var(--bg-secondary) 100%);
    padding-top: 120px;
    padding-bottom: 60px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .legal-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, rgba(0, 169, 255, 0.1) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .legal-hero h1 {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: var(--text-main);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--text-main) 0%, var(--accent-blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .last-updated {
    color: var(--text-secondary);
    font-size: 1rem;
    font-style: italic;
    margin-top: 1rem;
  }

  /* Główna treść */
  .legal-main {
    background-color: var(--bg-main);
    min-height: 50vh;
  }

  .legal-content {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 20px;
  }

  .content-wrapper {
    background: rgba(31, 31, 31, 0.5);
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(0, 169, 255, 0.1);
    backdrop-filter: blur(10px);
  }

  /* Stylizacja treści markdown */
  .content-wrapper :global(h1) {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--accent-blue);
    margin: 2rem 0 1.5rem;
    text-align: center;
  }

  .content-wrapper :global(h2) {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--accent-blue);
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-blue);
    position: relative;
  }

  .content-wrapper :global(h2::before) {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 60px;
    height: 2px;
    background: var(--text-main);
  }

  .content-wrapper :global(h3) {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-main);
    margin: 2rem 0 1rem;
  }

  .content-wrapper :global(p) {
    font-family: var(--font-body);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--text-main);
  }

  .content-wrapper :global(ul),
  .content-wrapper :global(ol) {
    margin: 1.5rem 0 2rem 2rem;
    color: var(--text-main);
  }

  .content-wrapper :global(li) {
    margin-bottom: 0.8rem;
    line-height: 1.7;
  }

  .content-wrapper :global(strong) {
    color: var(--accent-blue);
    font-weight: 600;
  }

  /* Style dla divów z klasą contact-info (z markdown) */
  .content-wrapper :global(.contact-info) {
    background: linear-gradient(135deg, rgba(0, 169, 255, 0.08) 0%, rgba(0, 169, 255, 0.03) 100%);
    padding: 2rem;
    border-radius: 16px;
    margin: 2.5rem 0;
    border: 1px solid rgba(0, 169, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 169, 255, 0.08);
    backdrop-filter: blur(5px);
    position: relative;
  }

  .content-wrapper :global(.contact-info::before) {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--accent-blue) 0%, rgba(0, 169, 255, 0.5) 100%);
    border-radius: 0 0 0 16px;
  }

  .content-wrapper :global(.contact-info p) {
    margin-bottom: 0.8rem;
    font-weight: 500;
  }

  .content-wrapper :global(.contact-info p:last-child) {
    margin-bottom: 0;
  }

  .content-wrapper :global(a) {
    color: var(--accent-blue);
    text-decoration: underline;
    transition: var(--transition-fast);
  }

  .content-wrapper :global(a:hover) {
    color: var(--text-main);
    text-decoration: none;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .legal-hero {
      padding-top: 100px;
      padding-bottom: 40px;
    }

    .content-wrapper {
      padding: 2rem 1.5rem;
      margin: 0 1rem;
    }

    .content-wrapper :global(h1) {
      font-size: 2rem;
    }

    .content-wrapper :global(h2) {
      font-size: 1.5rem;
    }

    .content-wrapper :global(h3) {
      font-size: 1.2rem;
    }

    .content-wrapper :global(ul),
    .content-wrapper :global(ol) {
      margin-left: 1rem;
    }
  }

  @media (max-width: 480px) {
    .legal-hero {
      padding-top: 90px;
      padding-bottom: 30px;
    }

    .content-wrapper {
      padding: 1.5rem 1rem;
      margin: 0 0.5rem;
    }
  }
</style>
