  /* Pause animations on hover */
  .clients-carousel-container:hover .carousel-track {
    animation-play-state: paused;
  }

  /* Reduce motion preference */
  @media (prefers-reduced-motion: reduce) {
    .carousel-track {
      animation: none;
    }
    
