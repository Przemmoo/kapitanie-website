  .bar:nth-child(2) { height: 8px; }
  .bar:nth-child(3) { height: 16px; }
  .bar:nth-child(4) { height: 10px; }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* App Info */
  .app-info {
    padding-left: 2rem;
  }

  .section-title {
    color: var(--text-main);
    margin-bottom: 2rem;
  }

  .app-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  /* Features List */
  .features-list {
