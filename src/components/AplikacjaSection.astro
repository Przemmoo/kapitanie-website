<style>
  .aplikacja-section {
    position: relative;
    overflow: hidden;
  }

  .aplikacja-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
    min-height: 500px;
  }

  /* App Mockup */
  .app-mockup {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .phone-container {
    position: relative;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
  }

  .phone-frame {
    width: 280px;
    height: 580px;
    background: #2C2C2E;
    border-radius: 40px;
    padding: 8px;
    position: relative;
  }

  .phone-frame::before {
    content: '';
    position: absolute;
    top: 15px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 6px;
    background: #1C1C1E;
    border-radius: 3px;
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1C1C1E 0%, #2C2C2E 100%);
    border-radius: 32px;
    overflow: hidden;
    position: relative;
  }

  /* App Interface */
  .app-interface {
    height: 100%;
    display: flex;
    flex-direction: column;
    color: white;
    font-size: 12px;
  }

  .app-header {
    padding: 20px 16px 16px;
    background: linear-gradient(135deg, var(--accent-blue), #0088CC);
  }

  .app-status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    font-size: 11px;
    font-weight: 600;
  }

  .status-icons {
    display: flex;
    gap: 4px;
  }

  .signal, .wifi, .battery {
    width: 12px;
    height: 8px;
    background: white;
    border-radius: 1px;
  }

  .app-nav .app-title {
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 4px 0;
  }

  .app-subtitle {
    opacity: 0.8;
    font-size: 11px;
  }

  .app-content {
    flex: 1;
    padding: 20px 16px;
    overflow: hidden;
  }

  /* App Menu */
  .app-menu {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-bottom: 20px;
  }

  .menu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 12px 8px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    font-size: 10px;
    transition: var(--transition-fast);
  }

  .menu-item.active {
    background: rgba(0, 169, 255, 0.2);
  }

  .menu-icon {
    font-size: 20px;
    margin-bottom: 6px;
  }

  /* Notifications */
  .app-notifications {
    margin-bottom: 20px;
  }

  .notification {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: rgba(255, 193, 7, 0.1);
    border-radius: 12px;
    border-left: 3px solid #FFC107;
  }

  .notification-dot {
    width: 8px;
    height: 8px;
    background: #FFC107;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .notification-title {
    font-size: 11px;
    font-weight: 600;
    margin-bottom: 2px;
  }

  .notification-subtitle {
    font-size: 9px;
    opacity: 0.7;
  }

  /* Schedule */
  .app-schedule h3 {
    font-size: 14px;
    margin-bottom: 12px;
    color: white;
  }

  .schedule-item {
    padding: 16px 12px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    position: relative;
  }

  .schedule-item.current {
    background: rgba(0, 169, 255, 0.1);
    border: 1px solid rgba(0, 169, 255, 0.3);
  }

  .schedule-time {
    font-size: 10px;
    color: var(--accent-blue);
    font-weight: 600;
    margin-bottom: 4px;
  }

  .schedule-title {
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .schedule-speaker {
    font-size: 10px;
    opacity: 0.7;
    margin-bottom: 8px;
  }

  .schedule-live {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 9px;
    font-weight: 600;
    color: #FF4444;
  }

  .live-indicator {
    width: 6px;
    height: 6px;
    background: #FF4444;
    border-radius: 50%;
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
  }

  /* Bottom Navigation */
  .app-bottom-nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
  }

  .nav-item {
    padding: 8px;
    border-radius: 8px;
    transition: var(--transition-fast);
  }

  .nav-item.active {
    background: rgba(0, 169, 255, 0.2);
  }

  .nav-icon {
    font-size: 16px;
  }

  /* Floating Elements */
