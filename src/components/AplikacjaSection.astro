  }

  .feature {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 1rem;
    background: rgba(31, 31, 31, 0.3);
    border-radius: 12px;
    border: 1px solid rgba(0, 169, 255, 0.1);
    transition: var(--transition-fast);
  }

  .feature:hover {
    background: rgba(31, 31, 31, 0.6);
    border-color: rgba(0, 169, 255, 0.3);
    transform: translateX(10px);
  }

  .feature-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--accent-blue), #0088CC);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .feature-icon svg {
    width: 24px;
    height: 24px;
  }

  .feature-content h3 {
    color: var(--text-main);
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
  }

  .feature-content p {
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  /* CTA Section */
  .app-cta {
    text-align: center;
  }

  .app-cta .btn {
    margin-bottom: 1.5rem;
    padding: 15px 30px;
    font-size: 1.1rem;
  }

  .app-tech-stack {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .tech-icons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .tech-icon {
    padding: 6px 12px;
    background: rgba(0, 169, 255, 0.1);
    border-radius: 20px;
    font-size: 0.8rem;
