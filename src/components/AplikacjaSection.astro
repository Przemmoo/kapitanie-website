    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    white-space: nowrap;
    animation: float 3s ease-in-out infinite;
  }

  .notification-bubble {
    top: 10%;
    right: -20px;
    animation-delay: 0s;
  }

  .feature-badge {
    top: 60%;
    left: -30px;
    background: #28A745;
    animation-delay: 1s;
  }

  .analytics-chart {
    bottom: 20%;
    right: -40px;
    background: #FFC107;
    color: #333;
    display: flex;
    align-items: center;
    gap: 8px;
    animation-delay: 2s;
  }

  .chart-bars {
